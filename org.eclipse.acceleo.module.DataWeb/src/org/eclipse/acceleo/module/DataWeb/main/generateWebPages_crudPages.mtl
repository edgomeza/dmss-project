[comment encoding = UTF-8 /]
[module generateWebPages_crudPages('http://www.unex.es/dmss/dataweb')]

[template public generateCRUDPages(app : Aplicacion)]
[for (entidad : Entidad | app.entidades)]
[for (rol : Rol | app.roles)]
[if (rol.paginasAccesibles->exists(p | p.oclIsKindOf(PaginaCRUD) and p.oclAsType(PaginaCRUD).entidad = entidad))]
[generateCRUDIndex(app, entidad, rol)/]
[generateCRUDList(app, entidad, rol)/]
[generateCRUDCreate(app, entidad, rol)/]
[generateCRUDEdit(app, entidad, rol)/]
[generateCRUDDetail(app, entidad, rol)/]
[/if]
[/for]
[/for]
[/template]

[template public generateCRUDIndex(app : Aplicacion, entidad : Entidad, rol : Rol)]
[file ('web/'+rol.nombre.toLowerCase()+'/pages/'+entidad.nombre.toLowerCase()+'/index.html', false, 'UTF-8')]
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>[app.nombre/] - [entidad.nombre/]</title>
    <link rel="stylesheet" href="../../../assets/css/style.css">
</head>
<body>
    <header class="app-header">
        <div class="container">
            <h1>Gestión de [entidad.nombre/]</h1>
        </div>
    </header>
    
    <nav class="main-nav">
        <div class="container nav-container">
            <ul class="nav-menu">
                <li class="nav-item"><a href="../../dashboard.html" class="nav-link">Dashboard</a></li>
                <li class="nav-item"><a href="index.html" class="nav-link active">Gestión [entidad.nombre/]</a></li>
                <li class="nav-item"><a href="list.html" class="nav-link">Listar</a></li>
                <li class="nav-item"><a href="create.html" class="nav-link">Crear</a></li>
            </ul>
        </div>
    </nav>
    
    <main class="main-content">
        <div class="container">
            <section class="card">
                <div class="card-header"><h2>Resumen de [entidad.nombre/]</h2></div>
                <div class="card-body">
                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-number">[entidad.atributos->size()/]</div>
                            <div class="stat-label">Atributos</div>
                        </div>
                    </div>
                </div>
            </section>
            
            <section class="card">
                <div class="card-header"><h3>Operaciones Disponibles</h3></div>
                <div class="card-body">
                    <div class="actions-grid">
                        <a href="list.html" class="btn btn-primary">Listar Registros</a>
                        <a href="create.html" class="btn btn-success">Crear Registro</a>
                    </div>
                </div>
            </section>
        </div>
    </main>
    
    <script src="../../../assets/js/app.js"></script>
    <script src="../../../assets/js/[entidad.nombre.toLowerCase()/].js"></script>
</body>
</html>
[/file]
[/template]

[template public generateCRUDList(app : Aplicacion, entidad : Entidad, rol : Rol)]
