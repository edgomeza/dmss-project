[comment encoding = UTF-8 /]
[module generateWebPages_quiz('http://www.unex.es/dmss/dataweb')]

[template public generateQuiz(app : Aplicacion, cuestionario : Cuestionario)]
[file ('web/quizzes/'+cuestionario.nombre+'.html', false, 'UTF-8')]
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>[app.nombre/] - [cuestionario.titulo/]</title>
    <meta name="description" content="[if (cuestionario.descripcion.oclIsUndefined() = false)][cuestionario.descripcion/][else]Eval√∫a tus conocimientos con el cuestionario [cuestionario.titulo/][/if]">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../assets/css/style.css">
    <link rel="icon" type="image/x-icon" href="../assets/icons/favicon.ico">
</head>
<body>
    <!-- Header -->
    <header class="app-header">
        <div class="container">
            <h1>[cuestionario.titulo/]</h1>
            <p>[if (cuestionario.descripcion.oclIsUndefined() = false)][cuestionario.descripcion/][else]Pon a prueba tus conocimientos[/if]</p>
        </div>
    </header>
    
    <nav class="main-nav">
        <div class="container nav-container">
            <div class="nav-brand">
                <a href="../index.html" class="nav-logo">[app.nombre/]</a>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="../index.html" class="nav-link">Inicio</a>
                </li>
            </ul>
            <button class="nav-toggle" aria-label="Abrir men√∫">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </nav>
    
    <main class="main-content">
        <div class="container">
            <div class="quiz-container">
                <div class="quiz-info card mb-6">
                    <div class="card-body">
                        <div class="quiz-overview grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div class="overview-item">
                                <div class="overview-icon">üìù</div>
                                <div class="overview-content">
                                    <div class="overview-number">[cuestionario.preguntas->size()/]</div>
                                    <div class="overview-label">Preguntas</div>
                                </div>
                            </div>
                            <div class="overview-item">
                                <div class="overview-icon">‚è±Ô∏è</div>
                                <div class="overview-content">
                                    <div class="overview-number">30</div>
                                    <div class="overview-label">Minutos</div>
                                </div>
                            </div>
                            <div class="overview-item">
                                <div class="overview-icon">üéØ</div>
                                <div class="overview-content">
                                    <div class="overview-number">100</div>
                                    <div class="overview-label">Puntos M√°ximos</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="quiz-progress">
                    <div class="progress-bar">
                        <div class="progress-fill" id="progress-fill" style="width: 0%"></div>
                    </div>
                    <div class="progress-info">
                        <span class="progress-text">
                            Pregunta <span id="current-question">1</span> de <span id="total-questions">[cuestionario.preguntas->size()/]</span>
                        </span>
                        <span class="timer" id="timer-display">30:00</span>
                    </div>
                </div>
                
                <form id="quiz-form" class="quiz-form card" data-quiz-id="[cuestionario.nombre/]" data-time-limit="30">
                    <div class="card-body">
                        [for (pregunta : Pregunta | cuestionario.preguntas)]
                        <div class="question-container" data-question="[i/]" [if (i > 1)]style="display: none;"[/if]>
                            <div class="question-header">
                                <h3 class="question-text">[pregunta.texto/]</h3>
                            </div>
                            
                            <div class="question-options">
                                [if (pregunta.oclIsTypeOf(PreguntaOpcionMultiple))]
                                [let preguntaOM : PreguntaOpcionMultiple = pregunta.oclAsType(PreguntaOpcionMultiple)]
                                [for (opcion : OpcionRespuesta | preguntaOM.opciones)]
                                <div class="option-card">
                                    <input type="radio" id="q[i/]_[opcion.nombre/]" name="question_[i/]" value="[opcion.valor/]" class="option-input" required>
                                    <label for="q[i/]_[opcion.nombre/]" class="option-label">
                                        <div class="option-indicator">
                                            <span class="option-letter">[let optionIndex : Integer = preguntaOM.opciones->indexOf(opcion)][if (optionIndex = 1)]A[elseif (optionIndex = 2)]B[elseif (optionIndex = 3)]C[elseif (optionIndex = 4)]D[else]E[/if][/let]</span>
                                        </div>
                                        <div class="option-content">
                                            <span class="option-text">[opcion.texto/]</span>
                                        </div>
                                    </label>
                                </div>
                                [/for]
                                [/let]
                                [elseif (pregunta.oclIsTypeOf(PreguntaVerdaderoFalso))]
                                <div class="option-card">
                                    <input type="radio" id="q[i/]_true" name="question_[i/]" value="true" class="option-input" required>
                                    <label for="q[i/]_true" class="option-label">
                                        <div class="option-indicator">
                                            <span class="option-letter">V</span>
                                        </div>
                                        <div class="option-content">
                                            <span class="option-text">Verdadero</span>
                                        </div>
                                    </label>
                                </div>
                                <div class="option-card">
                                    <input type="radio" id="q[i/]_false" name="question_[i/]" value="false" class="option-input" required>
                                    <label for="q[i/]_false" class="option-label">
                                        <div class="option-indicator">
                                            <span class="option-letter">F</span>
                                        </div>
                                        <div class="option-content">
                                            <span class="option-text">Falso</span>
                                        </div>
                                    </label>
                                </div>
                                [elseif (pregunta.oclIsTypeOf(PreguntaRespuestaCorta))]
                                <div class="textarea-container">
                                    <textarea id="q[i/]_text" name="question_[i/]" rows="4" class="form-textarea" placeholder="Escribe tu respuesta aqu√≠..." required maxlength="500"></textarea>
                                    <div class="textarea-counter">
                                        <span id="q[i/]_counter">0</span>/500 caracteres
                                    </div>
                                </div>
                                [/if]
                            </div>
                            
                            <div class="question-navigation">
                                [if (i > 1)]
                                <button type="button" class="btn btn-secondary" onclick="previousQuestion([i/])">
                                    Anterior
                                </button>
                                [/if]
                                
                                [if (i < cuestionario.preguntas->size())]
                                <button type="button" class="btn btn-primary ml-auto" onclick="nextQuestion([i/])" disabled>
                                    Siguiente
                                </button>
                                [else]
                                <button type="button" class="btn btn-success ml-auto" onclick="showSubmitConfirmation()" disabled>
                                    Finalizar Cuestionario
                                </button>
                                [/if]
                            </div>
                        </div>
                        [/for]
                    </div>
                </form>

                <!-- Modal de confirmaci√≥n -->
                <div id="submit-confirmation-modal" class="modal">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4>¬øFinalizar cuestionario?</h4>
                        </div>
                        <div class="modal-body">
                            <p>¬øEst√°s seguro de que quieres finalizar? Una vez enviadas tus respuestas no podr√°s modificarlas.</p>
                            <div id="submission-summary"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancelar</button>
                            <button type="button" class="btn btn-success btn-submit-final" onclick="submitSurvey()">S√≠, finalizar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <footer class="app-footer">
        <div class="container">
            <div class="footer-bottom">
                <p>&copy; 2025 [app.nombre/]. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>
    
    <script src="../assets/js/app.js"></script>
    <script src="../assets/js/survey.js"></script>
    <style>
    
.overview-item {
    text-align: center;
    padding: 1.5rem;
    background: white;
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--gray-200);
    transition: var(--transition);
}

.overview-item:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.overview-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
}

.overview-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary-600);
    line-height: 1;
}

.overview-label {
    font-size: 0.875rem;
    color: var(--gray-600);
    margin-top: 0.25rem;
}

.quiz-progress {
    background: white;
    border-radius: var(--radius);
    padding: 1.5rem;
    margin-bottom: 2rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--gray-200);
}

.progress-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
}

.timer {
    font-family: var(--font-family-mono);
    font-weight: 600;
    color: var(--primary-600);
    background: var(--primary-50);
    padding: 0.5rem 1rem;
    border-radius: var(--radius);
    border: 1px solid var(--primary-200);
}

.question-container {
    background: white;
    border-radius: var(--radius-lg);
    border: 1px solid var(--gray-200);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
}

.question-header {
    background: var(--gray-50);
    padding: 2rem 2rem 1rem;
    border-bottom: 1px solid var(--gray-200);
}

.question-text {
    margin: 0;
    color: var(--gray-900);
    font-size: 1.25rem;
    line-height: 1.5;
    font-weight: 600;
}

.question-options {
    padding: 2rem;
}

.option-card {
    margin-bottom: 1rem;
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
}

.option-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
}

.option-label {
    display: flex;
    align-items: center;
    padding: 1.25rem;
    cursor: pointer;
    transition: var(--transition);
    background: white;
    border: 2px solid var(--gray-200);
    border-radius: var(--radius);
    margin: 0;
}

.option-label:hover {
    border-color: var(--primary-300);
    background: var(--primary-50);
}

.option-input:checked + .option-label {
    border-color: var(--primary-500);
    background: var(--primary-100);
    box-shadow: 0 0 0 3px var(--primary-100);
}

.option-indicator {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: var(--gray-100);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    transition: var(--transition);
    position: relative;
}

.option-input:checked + .option-label .option-indicator {
    background: var(--primary-500);
    color: white;
}

.option-letter {
    font-weight: 700;
    font-size: 1rem;
}

.option-content {
    flex: 1;
}

.option-text {
    color: var(--gray-700);
    font-size: 1rem;
    line-height: 1.5;
}

.option-input:checked + .option-label .option-text {
    color: var(--gray-900);
    font-weight: 500;
}

.question-navigation {
    padding: 2rem;
    border-top: 1px solid var(--gray-200);
    background: var(--gray-50);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
}

.btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none !important;
}

.quiz-results {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
}

.results-header {
    text-align: center;
    margin-bottom: 3rem;
}

.score-display {
    margin: 2rem 0;
}

.score-circle {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    box-shadow: var(--shadow-lg);
}

.score-value {
    font-size: 2rem;
    font-weight: 700;
    color: white;
}

.score-details {
    color: var(--gray-600);
    font-size: 1.125rem;
}

.question-result {
    border: 1px solid var(--gray-200);
    border-radius: var(--radius);
    padding: 1.5rem;
    margin-bottom: 1rem;
    background: white;
}

.question-result.correct {
    border-color: var(--success-300);
    background: var(--success-50);
}

.question-result.incorrect {
    border-color: var(--danger-300);
    background: var(--danger-50);
}

.question-number {
    font-weight: 700;
    color: var(--primary-600);
    margin-bottom: 0.5rem;
}

.question-result .question-text {
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--gray-900);
}

.answer-comparison {
    margin-top: 1rem;
}

.user-answer, .correct-answer {
    padding: 0.75rem;
    border-radius: var(--radius);
    margin-bottom: 0.5rem;
}

.user-answer {
    background: var(--blue-50);
    border: 1px solid var(--blue-200);
}

.correct-answer {
    background: var(--green-50);
    border: 1px solid var(--green-200);
}

.correct-indicator {
    color: var(--success-600);
    font-weight: 600;
    margin-left: 0.5rem;
}

.incorrect-indicator {
    color: var(--danger-600);
    font-weight: 600;
    margin-left: 0.5rem;
}

/* Modal */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    animation: fadeIn 0.3s ease;
}

.modal-content {
    background: white;
    margin: 15% auto;
    max-width: 500px;
    border-radius: var(--radius);
    box-shadow: var(--shadow-lg);
    animation: slideIn 0.3s ease;
}

.modal-header {
    padding: 1.5rem 1.5rem 0;
}

.modal-header h4 {
    margin: 0;
    color: var(--gray-900);
}

.modal-body {
    padding: 1rem 1.5rem;
}

.modal-footer {
    padding: 0 1.5rem 1.5rem;
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
}

/* Animaciones */
@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes slideIn {
    from { 
        opacity: 0;
        transform: translateY(-50px);
    }
    to { 
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive */
@media (max-width: 768px) {
    .quiz-container {
        padding: 0 0.5rem;
    }
    
    .question-header {
        padding: 1.5rem 1rem 1rem;
    }
    
    .question-options {
        padding: 1rem;
    }
    
    .option-label {
        padding: 1rem;
    }
    
    .question-navigation {
        padding: 1rem;
        flex-direction: column;
    }
    
    .question-navigation button {
        width: 100%;
        justify-content: center;
    }
    
    .ml-auto {
        margin-left: 0;
    }
    
    .progress-info {
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .overview-item {
        padding: 1rem;
    }
    
    .overview-number {
        font-size: 1.5rem;
    }
}
    </style>
</body>
</html>
[/file]
[/template]