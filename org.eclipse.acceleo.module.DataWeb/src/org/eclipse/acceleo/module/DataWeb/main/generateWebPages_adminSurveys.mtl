                                    <th>Encuesta</th>
                                    [for (rol : Rol | app.roles)]
                                    <th>[rol.nombre/]</th>
                                    [/for]
                                </tr>
                            </thead>
                            <tbody>
                                [for (encuesta : Encuesta | app.encuestas)]
                                <tr>
                                    <td>[encuesta.titulo/]</td>
                                    [for (rol : Rol | app.roles)]
                                    <td>
                                        <div class="role-toggle">
                                            <input type="checkbox" id="role_[encuesta.nombre/]_[rol.nombre/]" 
                                                   class="role-checkbox"
                                                   data-survey="[encuesta.nombre/]" 
                                                   data-role="[rol.nombre/]"
