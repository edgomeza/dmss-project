        }
        
        .survey-actions {
            padding: 1.25rem;
            background: var(--gray-50);
            border-top: 1px solid var(--gray-200);
            display: flex;
            gap: 0.5rem;
        }
        
        .role-toggle {
            position: relative;
            display: inline-block;
        }
        
        .role-checkbox {
            opacity: 0;
            width: 0;
            height: 0;
        }
        
        .role-label {
            position: relative;
            display: inline-block;
            width: 40px;
            height: 20px;
            background-color: var(--gray-300);
            border-radius: 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        .role-label:before {
            content: '';
            position: absolute;
            top: 2px;
            left: 2px;
            width: 16px;
            height: 16px;
            background-color: white;
            border-radius: 50%;
            transition: transform 0.3s;
        }
        
        .role-checkbox:checked + .role-label {
            background-color: var(--primary-500);
        }
        
        .role-checkbox:checked + .role-label:before {
            transform: translateX(20px);
        }
        
        .response-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background: white;
            border-radius: var(--radius);
            border: 1px solid var(--gray-200);
            margin-bottom: 0.75rem;
        }
        
        .response-info {
            flex: 1;
        }
        
        .response-meta {
