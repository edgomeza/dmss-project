                                            <label for="role_[encuesta.nombre/]_[rol.nombre/]" class="role-label"></label>
                                        </div>
                                    </td>
                                    [/for]
                                </tr>
                                [/for]
                            </tbody>
                        </table>
                        <div class="mt-4">
                            <button id="saveRoleAssignments" class="btn btn-primary">Guardar Asignaciones</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
    
    <!-- Modal para mostrar resultados -->
