        .stat-card {
            background: white;
            border-radius: var(--radius);
            padding: 1.5rem;
            display: flex;
            align-items: center;
            border: 1px solid var(--gray-200);
            box-shadow: var(--shadow-sm);
        }
        
        .stat-icon {
