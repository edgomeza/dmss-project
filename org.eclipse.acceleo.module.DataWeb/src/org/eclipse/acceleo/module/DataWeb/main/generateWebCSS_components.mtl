.card-header h3,
.card-header h4 {
    margin: 0 0 var(--spacing-sm);
    color: var(--gray-900);
}

.card-header p {
    margin: 0;
    color: var(--gray-600);
    font-size: 0.875rem;
}

.card-body {
    padding: var(--spacing-lg);
}

.card-footer {
    padding: var(--spacing-lg);
    border-top: 1px solid var(--gray-200);
    background: var(--gray-50);
}

/* Button styles */
.btn {
