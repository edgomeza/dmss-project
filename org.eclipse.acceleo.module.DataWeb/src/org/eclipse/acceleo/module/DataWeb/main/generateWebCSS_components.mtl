    line-height: 1.5;
    text-decoration: none;
    border-radius: var(--radius);
    border: 1px solid transparent;
    cursor: pointer;
    transition: var(--transition);
    text-align: center;
    vertical-align: middle;
    white-space: nowrap;
    user-select: none;
}

.btn:hover {
    text-decoration: none;
    transform: translateY(-1px);
